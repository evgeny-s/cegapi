{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "suite": true,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "it": true,
    "expect": true,
    "sinon": true
  },

  "parser": "babel-eslint",
  "rules": {
    "no-param-reassign": 0,
    "object-curly-spacing": ["error", "never", { "objectsInObjects": true }],
    "class-methods-use-this": 0,
    "no-return-await": 0,
    "func-names": 0,
    "no-underscore-dangle": 0,
    "newline-before-return": 1,
    "max-len": ["error", { "code": 120 }],
    "no-bitwise": [2, { "allow": ["^"] }]
  }
}